{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "outDir": "app",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": false
    },
    "exclude": [
        "node_modules",
        "typings/browser",
        "typings/browser.d.ts",
        "android",
        "ios"
    ]
}